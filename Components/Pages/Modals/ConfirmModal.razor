@inject StudentService studentService



<div class="modal-body text-center p-4">
    <i class="bi bi-exclamation-triangle-fill text-warning fs-1 mb-3"></i>
    <h5 class="mb-3 fw-bold">정말 삭제하시겠습니까?</h5>
    <p class="text-muted">이 작업은 되돌릴 수 없습니다.</p>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <button type="button" class="btn btn-danger px-4" @onclick="Close">
            삭제
        </button>
        <button type="button" class="btn btn-outline-secondary px-4" @onclick="Cancel">
            취소
        </button>
    </div>
</div>


@code {

    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; } = default!;
    async Task Close() => await BlazoredModal.CloseAsync(ModalResult.Ok(true));
    async Task Cancel() => await BlazoredModal.CancelAsync();
}




